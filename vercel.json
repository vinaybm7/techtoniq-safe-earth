{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build@1.0.5",
      "config": {
        "distDir": "dist",
        "nodeVersion": "18.x"
      }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node@4.2.4"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { 
      "src": "/(.*)", 
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
