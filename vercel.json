{
  "builds": [
    { "src": "server/index.ts", "use": "@vercel/node" },
    { "src": "netlify/functions/server.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/index.ts" },
    { "src": "/(.*)", "dest": "/" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
