# ===================================
# Environment Configuration
# ===================================

# MongoDB Atlas Connection String
# Replace with your actual MongoDB Atlas URI
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?<options>
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/techtoniq?retryWrites=true&w=majority

# Server Configuration
NODE_ENV=development
PORT=3001

# API Configuration
VITE_API_URL=/api

# Security
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# ===================================
# Optional Settings
# ===================================

# Logging
ENABLE_LOGGING=true
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100           # limit each IP to 100 requests per windowMs

# ===================================
# Notes:
# 1. Never commit actual credentials to version control
# 2. Create a .env.local file for local development
# 3. Set environment variables in your deployment platform
# ===================================
